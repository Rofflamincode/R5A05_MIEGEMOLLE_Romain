  "item": [
    {
      "name": "Auth - Login (publisher: romain)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"romain\",\n  \"password\": \"{{password}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set('jwt', json.token);",
              "pm.collectionVariables.set('currentUser', json.username);",
              "pm.test('Token present', function () { pm.expect(json.token).to.be.ok; });"
            ]
          }
        }
      ]
    },
